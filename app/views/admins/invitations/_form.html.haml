= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { class: "form-inline", method: :post }, wrapper: :inline_form do |f|
  = devise_error_messages!
  - resource.class.invite_key_fields.each do |field|
    = f.input_field field, class: "form-control"
  = f.button :submit, t("devise.invitations.new.submit_button")