.col-sm-offset-3.col-sm-6
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'panel panel-default'}) do |f|
    = f.error_notification
    .panel-heading
      %h2.panel-title User Registration
    .panel-body
      .form-inputs
        = f.input :email, required: true
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
        = f.input :password_confirmation, required: true
    .panel-footer.clearfix
      .form-actions
        .pull-left
          = render "devise/shared/links"
        .pull-right
          = f.button :submit, "Sign up", class: 'btn-success'