.admin-users
  .admin-page-header
    %span.h2 Users

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Email
        %th.text-center Featured
        %th Last Signed In
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td.text-center
            = button_to feature_admin_user_path(user), method: :put, remote: true, class: "btn btn-link btn-feature", form_class: "js-feature-item" do
              %i.fa.fa-star.feature-star{ class: ("featured" if user.featured_at )}
          %td= time_ago_in_words(user.last_sign_in_at) + " ago"

            