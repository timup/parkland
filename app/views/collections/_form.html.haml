= simple_form_for(collection) do |f|
  = f.error_notification
  - if collection.image.present?
    .form-image.text-center
      = image_tag collection.image, class: "imgix-fluid"
  .form-inputs
    = f.input :name, required: true, autofocus: true, placeholder: "Enter the collection's name"
    = f.input :image, as: :file
    = f.input :description, placeholder: "Tell us more about this collection"
  .form-actions.text-right
    - if collection.id
      = link_to "Cancel", collection_path(collection), class: "btn btn-danger"
    = f.button :submit
