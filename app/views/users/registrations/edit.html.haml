.container
  .page-header
    %h1 Edit Profile
  .row
    .col-sm-offset-2.col-sm-8
      
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        - if resource.image.present?
          .form-image.text-center
            = image_tag resource.image, class: "imgix-fluid"
        .form-inputs
          = f.input :name, required: true, autofocus: true, hint: "changing your name will change your URL"
          = f.input :email, required: true
          = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
          = f.input :password_confirmation, required: false
          = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
          = f.input :image, as: :file, hint: "leave it blank if you don't want to change it"
        .form-actions.text-right
          = f.button :submit, "Update Profile"
