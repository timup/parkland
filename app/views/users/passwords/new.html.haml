.page-header
.container
  .col-sm-offset-3.col-sm-6
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'panel panel-default' }) do |f|
      = f.error_notification
      .panel-heading
        %h2.panel-title Forgot your password?
      .panel-body
        .form-inputs
          = f.input :email, required: true, autofocus: true
      .panel-footer.clearfix
        .form-actions
          .pull-left
            = render "devise/shared/links"
          .pull-right
            = f.button :submit, "Send me reset instructions", class: 'btn-success'
